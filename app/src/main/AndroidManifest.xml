<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Quiz.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedCapsule"
        tools:targetApi="31">
        <activity
            android:name=".Quiz.QuizScreen"
            android:exported="false"
            android:label="@string/title_activity_quiz_screen"
            android:theme="@style/Theme.MedCapsule" />
        <activity
            android:name=".DiscoverScreenActivities.PdfViewer"
            android:exported="false"
            android:label="@string/title_activity_pdf_viewer"
            android:theme="@style/Theme.MedCapsule" />
        <activity
            android:name=".DiscoverScreenActivities.PartScreen"
            android:exported="false"
            android:label="@string/title_activity_part_screen"
            android:theme="@style/Theme.MedCapsule" />
        <activity
            android:name=".DiscoverScreenActivities.ChaptersPart"
            android:exported="false"
            android:label="@string/title_activity_chapters_part"
            android:theme="@style/Theme.MedCapsule" />
        <activity
            android:name=".DiscoverScreenActivities.ChapterScreen"
            android:exported="false"
            android:label="@string/title_activity_chapter"
            android:theme="@style/Theme.MedCapsule" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MedCapsule">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>